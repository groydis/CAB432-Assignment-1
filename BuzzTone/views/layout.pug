doctype html
html
  head
    // Import Google Icon Font
    link(href='https://fonts.googleapis.com/icon?family=Material+Icons', rel='stylesheet')
    // Import Google Charts API  
    script(type='text/javascript', src='https://www.gstatic.com/charts/loader.js')
    // Import materialize.css

    link(type='text/css', rel='stylesheet', href='stylesheets/materialize.min.css', media='screen,projection')
    // Let browser know website is optimized for mobile

    meta(name='viewport', content='width=device-width, initial-scale=1.0')
  body
    .container
      img.responsive-img(src='images/logo.png')
      form(action='/', method='post')
          .input-field.col.s12
            input#searchquery.validate(type='text', name='query')
            label(for='searchquery') Search
          button.btn.waves-effect.waves-light.right(type='submit', value='Submit')
            | Search
            i.material-icons.right search
      block content

